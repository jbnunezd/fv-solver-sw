#==================================================================================================#
#  MAKEFILE
#==================================================================================================#


#--------------------------------------------------------------------------------------------------#
all: main
#--------------------------------------------------------------------------------------------------#
#
#--------------------------------------------------------------------------------------------------#
main:
	@cd src && $(MAKE) -s -j -f makefile
#--------------------------------------------------------------------------------------------------#
#
#--------------------------------------------------------------------------------------------------#
rebuild: clean all
#--------------------------------------------------------------------------------------------------#
#
#--------------------------------------------------------------------------------------------------#
run:
	@./bin/main
#--------------------------------------------------------------------------------------------------#
#
#--------------------------------------------------------------------------------------------------#
clean:
	@printf "%`tput cols`s"|tr ' ' '-'
	@printf "CLEANING UP THE PROJECT...\n"
	@printf "%`tput cols`s"|tr ' ' '-'
	@cd src && $(MAKE) -s clean
	@rm -f *~ */*~ */*/*~
	@printf "%`tput cols`s"|tr ' ' '-'
	@printf "CLEANING UP THE PROJECT... DONE!\n"
	@printf "%`tput cols`s"|tr ' ' '-'
#--------------------------------------------------------------------------------------------------#
.PHONY: all main rebuild run clean
#--------------------------------------------------------------------------------------------------#
